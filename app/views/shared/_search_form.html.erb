<div id="search">
  <%= form_tag(profiles_path, method: 'get', class:"form-inline") do %>
    <label class="sr-only" for="inlineFormInputSearch">Search</label>
    <%= search_field_tag('search', params[:search], d: "home_search", class: 'form-control mr-sm-2 twitter-typeahead',
          type: 'text', placeholder: t(:search_placeholder, scope: 'pages.home.search') ) %>
    <%= submit_tag((t(:search_speaker, scope: 'pages.home.search')), class: 'btn btn-primary' ) %>
  <% end %>
</div>
