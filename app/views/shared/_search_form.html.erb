<%= form_tag(profiles_path, method: 'get') do %>
  <form class="form-inline">
    <div class="row">
      <div class="col-md-4 pr-0 ">
        <%= text_field_tag('search', params[:search], class: 'form-control mb-2 mr-sm-2 twitter-typeahead',
            type: 'text', placeholder: t(:search_text, scope: 'pages.home.search')) %>
      </div>
      <div class="col-md-2 pl-0">
        <%= button_tag((t(:find_speaker, scope: 'pages.home.search')), class: 'btn btn-primary' ) %>
      </div>
    </div>
  </form>

  <div class="row">
    <div class="col-md-2 offset-md-4 pl-0">
      <span class="btn btn-secondary"><%= link_to "I am a speakerin", sign_up_path %></span>
    </div>
  </div>
<% end %>

