<%= form_tag(profiles_path, method: 'get', class:"form-row home-search") do %>
  <label class="sr-only" for="inlineFormInputSearch">Search</label>
  <div class="col-8">
  <%= search_field_tag('search', params[:search], id: "home_search", class: 'form-control typeahead ',
        type: 'text', placeholder: t(:search_placeholder, scope: 'pages.home') ) %>
  </div>
  <div class="col-3">
  <%= submit_tag((t(:search_speaker, scope: 'pages.home')), class: 'btn btn-primary' ) %>
  </div>
<% end %>

