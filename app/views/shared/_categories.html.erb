<% @categories.each_slice(3).with_index do |sliced_categories, index| %>
    <div class="col-md-4">
      <ul class="list-unstyled pl-4 mb-0">
        <% sliced_categories.each do |category| %>
          <li>
            <%= category_link category, class:  "category_links" %>
          </li>
        <% end %>
      </ul>
    </div>
<% end %>
