<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="search">
        <%= form_tag(profiles_path, method: 'get') do %>
          <div class="form-group pt-1">
            <%= text_field_tag('search', params[:search], class: 'form-control typeahead profile__search',
            type: 'text', placeholder: t(:search_text, scope: 'pages.home.search')) %>
            <%= button_tag((t(:search, scope: 'pages.home.search')), class: 'btn btn-primary') %>
          </div>
        <% end %>
        <%= t(:search_categories_html, scope: 'search', root_path: root_path) %><br><br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

