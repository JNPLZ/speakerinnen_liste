<div class="row my-3 py-3 border-top">
  <div class="col-4">

    <%= t(:profile_status, scope: 'admin.profiles') + t(:public, scope: 'admin.profiles') + ' ' if @profile.published? %>
    <% if @profile.published %>
      <%= link_to t(:make_invisible, scope: 'admin.profiles'), unpublish_admin_profile_path(@profile.id),
      method: :post, class: 'btn btn-sm btn-danger', title: 'Hier kannst Du das Profile wieder unsichtbar machen.' %>
    <% else %>
      <%= link_to t(:make_public, scope: 'admin.profiles'), publish_admin_profile_path(@profile.id),
      method: :post, class: 'btn btn-sm btn-danger', title: 'Eine BestÃ¤tigungsmail wird verschickt.' %>
    <% end %>
  </div>
</div>
<div class="row my-3 py-3 border-top">
  <div class="col-12">
    <%= form_for @profile,{ url: admin_update_admin_profile_path(@profile.id), method: 'post' } do |f| %>
      <%= hidden_field_tag 'page', page %>
      <div class="form-group  row">
        <div class="col-sm-10">
          <%= f.text_field 'admin_comment', class: "form-control" %>
        </div>
        <%= f.submit t(:add_comment, scope: 'admin.profiles'), class: 'col-sm-2 col-form-label btn btn-primary btn-sm' %>
      </div>
    <% end %>
  </div>
</div>
<div class="row my-3 py-3 border-top">
  <div class="col-12">
    <%= simple_form_for @profile, { url: admin_update_admin_profile_path(@profile.id), method: 'post',
        html: { class: 'mt-3' }}  do |f| %>
      <div class="form-group">
        <%= f.label t(:feature_list, scope: 'admin.profiles').html_safe %>
        <%= f.select(:feature_ids, Feature.all.map{|feature|[feature.title, feature.id]}, { include_blank: true }, :multiple => true, id: :select_feature, class: 'form-control select_feature') %>
      </div>
      <%= f.submit t(:assign_feature, scope: 'admin.profiles'), class: 'btn btn-primary btn-sm' %>
    <% end  %>
  </div>
</div>
<div class="row my-3 py-3 border-vertical">
  <div class="col-12">
    <%= link_to t(:edit_profile, scope: "admin.profiles"), edit_admin_profile_path(@profile), class: "btn btn-primary btn-sm mb-2" %><br>
    <%= link_to t(:edit_medialink, scope: 'admin.medialink'), admin_profile_medialinks_path(@profile), class: 'btn btn-primary btn-sm mb-2', title: t(:edit, scope: 'medialinks') %><br>
    <%= link_to t(:show_all, scope: 'admin.profiles.edit'), admin_profiles_path, class: 'btn btn-primary btn-sm mb-2' %><br>
  </div>
</div>


<script>
    $(document).ready(function() {
      $('#select_feature').select2({
        placeholder: "Click here"
      });
    });
</script>
